<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lock_2"
        android:layout_marginBottom="248dp"
        android:adjustViewBounds="false"
        android:id="@+id/lock_state_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginBottom="179dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/texte_etat" />

    <Button
        android:text="SE CONNECTER A LA SERRURE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/connexionforme"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <LinearLayout
        android:id="@+id/lock_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        >

    <Button
        android:text="VERROUILLER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bouton_deverrou"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="10dp"
        android:id="@+id/bouton_verrou"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/lock_unlock_forme"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

    <Button
        android:text="DEVERROUILLER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:id="@+id/bouton_deverrou"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/lock_unlock_forme"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/lock_unlock"
        android:textColor="#201E1E"
        android:textSize="20sp"
        android:shadowRadius="5"
        android:text="TextView" />


</RelativeLayout>